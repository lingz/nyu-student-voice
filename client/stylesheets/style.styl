$mobile = 480px
$tablet = 768px
$default = 980px
$desktop = 1200px

$grey = #c2c2c2
* 
    box-sizing: border-box
    -webkit-box-sizing: border-box
    font-family: 'Montserrat', sans-serif;

html, body, .container, .main
    width:100%
    height:100%

nav ul 
    position:absolute
    right:15px
    ul
        display:none
        li
            float: none;
            text-align: center;
            margin-bottom: 10px;
    li
        float:left
        margin-left:20px
        a
            text-decoration:none
            color:white
    :hover > ul
        display:block
        float:auto
        color:white
        text-decoration:none

#main
    padding-top:50px

body
    background:url('/images/purpleBlur.jpg')
    background-position:center
    background-repeat: no-repeat
    background-size: cover
    background-attachment: fixed


.upvote-container
    width:120px
    height:50px
    float:left
    margin-top:50px
    margin-left:25px
    border: solid #fff 2px
    position:relative
    text-align: center
    line-height: 50px
    a
        text-decoration: none
        color: #fff


.pure-menu.pure-menu-open, .pure-menu.pure-menu-horizontal li  .pure-menu-children
    background: transparent
    border:none
    .pure-menu-children
        float:right
        .pure-menu-label
            color:white

          

.navbar { margin-bottom: 10px }
.navbar .navbar-inner {
    border-radius: 0px 0px 3px 3px;
}
#spinner { height: 300px }

.whiteblur
        background:#fff
        pointer-events: none
        opacity:0.3
.post 
    height:150px
    margin-bottom:10px
    width: calc(unquote("100% - 50px"))
    max-width:1100px
    margin-left:auto
    margin-right:auto
    *zoom: 1;
    -webkit-transition: all 300ms 0ms;
    -webkit-transition-delay: ease-in;
    -moz-transition: all 300ms 0ms ease-in;
    -o-transition: all 300ms 0ms ease-in;
    transition: all 300ms 0ms ease-in;
    position: relative;
    opacity: 1;
    button
        background: transparent
        outline: none
        border: 1px solid white
        color: white
        height: 50px
        width: 150px
        position: absolute
        right: 15px
        bottom: 10px
    .post-background
        position:absolute
        width:100%
        height:100%
    .comment
        opacity:none
    .post-content-wrapper
        position:relative
        float:left
        width:250px
        margin-left: 25px
        margin-top: 5px
        .post-content-container
            .post-content
                padding:15px
                width:900px
                .post-title
                    text-decoration:none
                    color:white
                    font-size:1.2em
                p
                    color:grey
                    font-size: 0.8em
                .post-comment
                    text-decoration:none
                    color:grey
    .post-body-detail
        position: absolute
        padding:15px 0px 0px 15px
        h3
            color:grey
            margin-bottom: 0px
        p
            color:white
   .comment-form
        padding: 5px 15px
        position:absolute
        .control-group
            .controls
                h4
                    color:grey
                    font-size:1.17em
                textarea
                    background:transparent
                    outline:none
                    border:none
                    color:white

.load-more-container
    width:200px
    height:50px
    border: solid white 1px
    margin-left:auto
    margin-right:auto
    background:rgba(255,255,255,0.3)
    padding: 12px 0px 0px 42px
    a
        color:white
        font-size:1.17em
        text-decoration:none

@media screen and (max-width: 980px)
    .post
        margin-left:25px
        .post-content-wrapper
            .post-content-container
                .post-content
                    width:600px

@media screen and (max-width: 768px)
    .post
        .post-content-wrapper
            .post-content-container
                .post-content
                    width: 500px
                    padding:25px


@media screen and (max-width: 480px)
    nav
        ul
            li
                margin-left:10px
        li
            a
                font-size:0.8em
    .post
        .upvote-container
            width:80px
            a
                font-size:0.8em
        .post-content-wrapper
            position: absolute
            width: 200px
            top: 50%
            margin-top: -40px
            left: 30%
            font-size:0.8em
            .post-content-container
                .post-content
                    width:200px
                    padding:0px




