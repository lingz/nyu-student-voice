            position: absolute
            font-size:0.8em
            .post-content-container
                .post-content
                    padding:0px
    .splash
        height:55%
        #login-title
            margin-bottom:auto
            font-size:1.8em
        p
            font-size:0.7em
    .form-contents
        .inner-forms
            .submit-foreground
                /*tags readjust to below submit button*/
                #select-tag
                    display: inline-block
                    width: -webkit-calc(unquote("100% - 50px"))
                    width: -moz-calc(unquote("100% - 50px"))
                    width: calc(unquote("100% - 50px"))
                .block-level
                    padding: 2px 5px
                    -moz-padding-end: 2px 5px;
                    -moz-padding-start: 2px 5px;
        #post-submit-container
            width: 100%
            input[type="submit"]
                width: 100%
